program GenerateRandomMatrix;
uses crt;
var
  i, j, n: integer;  // Змінні для індексів і розміру матриці
  matrix: array of array of integer;  // Динамічний масив для матриці
begin
  clrscr;  // Очищаємо екран

  // Введення розміру матриці
  write('Введіть розмір матриці n: ');
  readln(n);

  // Оголошення матриці розміру n x n
  setlength(matrix, n, n);

  // Генерація випадкових значень для елементів матриці
  randomize;  // Ініціалізація генератора випадкових чисел
  writeln('Згенерована матриця:');
  for i := 0 to n-1 do  // Цикл по рядках матриці
  begin
    for j := 0 to n-1 do  // Цикл по стовпцях матриці
    begin
      matrix[i][j] := random(201) - 100;  // Генерація числа в діапазоні від -100 до 100
      write(matrix[i][j]:5);  // Виведення згенерованого числа
    end;
    writeln;  // Перехід на новий рядок після виведення кожного рядка матриці
  end;

  readln;  // Очікування натискання клавіші перед завершенням програми
end.