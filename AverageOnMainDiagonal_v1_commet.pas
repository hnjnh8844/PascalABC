program AverageMainDiagonal;  // Оголошення програми для обчислення середнього арифметичного головної діагоналі
uses crt;  // Підключення модулю для роботи з екраном (необхідно для використання clrscr)

var
  i, n: integer;  // Змінні: i — для циклів, n — розмір матриці
  sum: real;  // Змінна для обчислення суми елементів головної діагоналі
  matrix: array of array of integer;  // Динамічний масив для зберігання матриці
begin
  clrscr;  // Очищаємо екран

  // Введення розміру матриці
  write('Введіть розмір матриці n: ');  // Виведення запиту для введення розміру матриці
  readln(n);  // Читання розміру матриці (n)

  // Оголошення матриці розміру n x n
  setlength(matrix, n, n);  // Виділення пам'яті для матриці розміру n x n

  // Введення елементів матриці
  writeln('Введіть елементи матриці:');  // Виведення повідомлення, щоб користувач вводив елементи
  for i := 0 to n-1 do  // Цикл по рядках матриці
  begin
    for j := 0 to n-1 do  // Цикл по стовпцях матриці
    begin
      write('matrix[', i+1, ',', j+1, ']: ');  // Виведення запиту для введення елемента
      read(matrix[i][j]);  // Читання елемента матриці в позицію (i, j)
    end;
  end;

  // Обчислення середнього арифметичного головної діагоналі
  sum := 0;  // Ініціалізація змінної sum (сума елементів на головній діагоналі)
  for i := 0 to n-1 do  // Цикл по головній діагоналі
  begin
    sum := sum + matrix[i][i];  // Додавання елемента на головній діагоналі (i, i) до суми
  end;

  // Виведення результату
  writeln('Середнє арифметичне головної діагоналі: ', sum / n:0:2);  // Виведення середнього арифметичного з точністю до 2 знаків після коми

  readln;  // Очікування натискання клавіші для завершення програми
end.